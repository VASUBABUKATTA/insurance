package com.insurance.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.insurance.model.FillDetailsPage;
import com.insurance.repository.FillDetailsRepository;

@Service
public class FillDetailsService 
{
	
	@Autowired
	FillDetailsRepository fillDetailsRepository;
	
	public List<FillDetailsPage> getAllData()
	{
		return fillDetailsRepository.findAll();
	}
	
	public Optional<FillDetailsPage> getFillDetailsById(long id)
	{
		return fillDetailsRepository.findById(id);
	}
	
	public List<FillDetailsPage> getFillDetailsByCustomerId(String customerId)
	{
		return fillDetailsRepository.findByCustomerId(customerId);
	}
	public FillDetailsPage createData(FillDetailsPage data )
	{
		return fillDetailsRepository.save(data);
	}
	

}
